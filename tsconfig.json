{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "include": [
    "next-env.d.ts",
    // FIXME - RH - add back when excluding generated src works
    // "components/**/*.ts",
    // "pages/**/*.tsx",
    "next.config.js",
    "public/sw.js"
  ],
  "exclude": ["node_modules", "generated-src"]
}
